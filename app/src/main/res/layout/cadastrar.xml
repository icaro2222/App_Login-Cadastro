<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CadastrarActivity">

    <TextView
        android:id="@+id/txt_cadastrar"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="126dp"
        android:text="Cadastro"
        android:textAlignment="center"
        android:textSize="34dp" />

    <TextView
        android:id="@+id/text_nome"
        android:layout_width="309dp"
        android:layout_height="56dp"
        android:layout_below="@+id/txt_cadastrar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="64dp"
        android:text="Nome"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/text_email"
        android:layout_width="281dp"
        android:layout_height="65dp"
        android:layout_below="@+id/text_nome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="63dp"
        android:text="Email"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/txt_idade"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_email"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="62dp"
        android:text="Data de Nascimento"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/text_senha2"
        android:layout_width="281dp"
        android:layout_height="65dp"
        android:layout_below="@+id/txt_idade"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="63dp"
        android:text="Senha"
        android:textSize="28dp" />

    <Button
        android:id="@+id/btn_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_below="@+id/input_senha"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="90dp"
        android:text="Cadastrar" />

    <EditText
        android:id="@+id/input_senha"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_senha2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="65dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editTextTextEmailAddress2"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_email"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="64dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_nome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="65dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_idade"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="65dp"
        android:ems="10"
        android:inputType="date" />
</RelativeLayout>